%table.table.table-striped
  %h2.well= "#{@match.team_a} #{@match.score || "vs"} #{@match.team_b} "
  %thead
    %th User
    %th Prediction
    %th
  %tbody
    - @predictions.each do |prediction|
      %tr
        %td= prediction.user.name
        %td
          = prediction.result
        %td
          - unless @match.result.nil?
            - if prediction.correct?
              %i.icon-ok
            - else
              %i.icon-remove
